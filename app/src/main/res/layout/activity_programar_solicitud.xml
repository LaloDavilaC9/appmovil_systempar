<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Programar_Solicitud">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-38dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_tutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="52dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Datos del Alumno:"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txtInfoTutor"
                android:layout_width="410dp"
                android:layout_height="33dp"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="JULIÁN ROMÁN LOERA"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Materia:"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txtInfoAsesoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="INTRODUCCIÓN A LA INGENIERÍA"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Fecha:"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="50dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginLeft="50dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_Fecha"
                        android:layout_width="136dp"
                        android:layout_height="match_parent"
                        android:background="#3F51B5"
                        android:text="FECHA"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/btn_Hora"
                        android:layout_width="136dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#3F51B5"
                        android:text="HORA"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Lugar:"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/txint_Lugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Lugar"
                android:inputType="textPersonName" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_regresar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="64dp"
                    android:backgroundTint="#3F51B5"
                    android:lineSpacingExtra="8sp"
                    android:text="REGRESAR"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/btnProgramar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="64dp"
                    android:backgroundTint="#18bb9c"
                    android:lineSpacingExtra="8sp"
                    android:text="PROGRAMAR ASESORÍA"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="italic" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>